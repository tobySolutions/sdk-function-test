{
  "compilerOptions": {
    "esModuleInterop": true,
    "isolatedModules": false,
    "lib": ["es2020"],
    "module": "esnext",
    "moduleResolution": "node16",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2022"
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
